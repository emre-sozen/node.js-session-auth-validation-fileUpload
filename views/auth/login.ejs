<h1>Login</h1>

<% if (typeof error != 'undefined') { %>
<div style="background-color: red; padding: 5px; color: #fff;">
    <%= error %>
</div>
<% } %>

<form action="/auth/login" method="post">
    <input type="text" name="username" placeholder="User Name" value="<%= typeof formData != 'undefined' ? formData.username : '' %>"> <br>
    <input type="password" name="password" placeholder="Password"> <br>
    <button type="submit">Login</button>
</form>